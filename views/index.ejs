<%- include('./base/header.ejs',{totalItems:totalItems, loggedIn: loggedIn,isAdmin:isAdmin,category:category})%>



<!-- ========================= SECTION MAIN ========================= -->
<section class="section-intro padding-y-sm">
<div class="container">

<div class="intro-banner-wrap">
	<img src="images/banners/1.jpg" class="img-fluid rounded">
</div>

</div> <!-- container //  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->

<!-- ========================= SECTION  ========================= -->
<section class="section-name padding-y-sm">
<div class="container">

<header class="section-heading">
	<a href="./store.html" class="btn btn-outline-primary float-right">See all</a>
	<h3 class="section-title">Popular products</h3>
</header><!-- sect-heading -->

	
<div class="row">
	 <!-- col.// -->

	<% if(productData.length>0){ %>
	<%	for(let i=0; i< productData.length; i++){ %>
			<div class="col-md-3">
				<div class="card card-product-grid">
					<a href="/product-detail/<%= productData[i]._id %>" class="img-wrap"> <img src="/images/<%= productData[i].image %>"> </a>
					
					<figcaption class="info-wrap">
						<a href="/product-detail/<%= productData[i]._id %>" class="title text-center "><%= productData[i].title%></a>
						<!-- <p class="text-center"><%= productData[i].description%></p> -->
						<div class="price mt-1 text-center">$<%= productData[i].price%></div> <!-- price-wrap.// -->
					</figcaption>
				</div>
			</div>

		<% } %> 
		<%	} %>

	
	


</div> <!-- row.// -->

</div><!-- container // -->
</section>
<!-- ========================= SECTION  END// ========================= -->




