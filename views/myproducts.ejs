<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <style>
    .equal-width-table {
        table-layout: fixed;
        width: 100%; /* Optional: You can set a specific width for the table if needed */
    }
    .vertical-line td,th {
            border-right: 1px solid #ccc; /* Add a border to the right side of each td */
            border-left: 1px solid #ccc; /* Add a border to the right side of each td */
            border-top: 1px solid #ccc; /* Add a border to the right side of each td */
        }
</style>
  <body>



    
    <div class="container-fluid mt-5 shadow-lg p-3 mb-5 bg-body-tertiary rounded">
       
        <table class="table equal-width-table vertical-line table-success table-hover">
            <h1 class="text-center bg-body-secondary">Total Products</h1> <hr>
            <thead>
              <tr>
                <th scope="col">Seriol No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Image</th>
                <th scope="col">Delete</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
                <%
                
                if(productData.length>0){
                    let count=1;
                    for(let i=0; i < productData.length; i++){
                        %>

                        <tr>
                            <th class="text-center align-middle"><%= count++%></th>
                            <td class="text-center align-middle"><%= productData[i].title%></td>
                            <td class="text-break text-center align-middle "><%= productData[i].description%></td>
                            <td class="text-center align-middle"><%= productData[i].price%></td>
                            <td class="text-center align-middle"><%= productData[i].category_name%></td>
                            <td class="text-center align-middle">
                                <img src="/images/<%= productData[i].image%>" width="90px" alt="">
                            </td>
                            <td class="text-center align-middle"><form action="/deletepost/<%= productData[i]._id%>" method="get">
                                <input type="submit" class="btn btn-danger" value="Delete">
                            </form></td>
                            <td class="text-center align-middle"><form action="/editpost/<%= productData[i]._id%>" method="get">
                                <input type="submit" class="btn btn-primary" value="Edit">
                            </form></td>
                          </tr>

                    <%
                    }
                }

                %>
             
             
            </tbody>
          </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>